@model CadastroMotorista.Models.Motorista

@{
    ViewData["Title"] = "Alteração";
}
@section Scripts
{
    <script type="text/javascript">
            $(document).ready(function(){
                $("#cpf").mask("999.999.999-99");
            });
            $('.somente-numeros').keyup(function() {
                $(this).val(this.value.replace(/\D/g, ''));
            });
    </script>
}

<h4>Alterar motorista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input id="cpf" asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control somente-numeros" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-warning" /> |
                <a class="btn btn-dark" asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>


